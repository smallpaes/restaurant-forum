<!--Display Section-->
<section class="p-3 display-panel rounded-bottom shadow mb-5" id="feed-section">
  <div class="row">
    <div class="col-md-6">
      <h4 class="mt-2 ml-2 topic pb-1">最新餐廳</h4>
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          {{#each restaurants}}
          <div>
            <div class="d-flex justify-content-between">
              <h4 class="m-0 title"><a href="/restaurants/{{this.id}}">{{this.name}}</a></h4>
              <small class="text-muted">{{moment this.createdAt}}</small>
            </div>
            <small class="text-muted">{{this.Category.name}}</small>
            <p class="mt-3 description">{{this.description}}</p>
            <hr>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h4 class="mt-2 ml-2 topic pb-1">最新評論</h4>
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          {{#each comments}}
          <div>
            <div class="d-flex justify-content-between">
              <h4 class="m-0 title">
                <a href="/restaurants/{{this.Restaurant.id}}">{{this.Restaurant.name}}</a>
              </h4>
              <small class="text-muted">{{moment this.createdAt}}</small>
            </div>
            <p class="mt-3 mb-1 description">{{this.text}}</p>
            <footer class="blockquote-footer">by <a href="/users/{{this.User.id}}">{{this.User.name}}</a></footer>

            <hr>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>